// mixin addRow(name, company, phone, email, country, status)
mixin addRow(name, company, phone, email, country, status)
  tr
    td.column-name__name= name
    td.column-name__company= company
    td.column-name__phone= phone
    td.column-name__email= email
    td.column-name__country= country
    td.column-name__status
      case status
        when 'Active'
          .customers__table--align-center
            button.customers__status.customers__status--active Active
        default
          .customers__table--align-center
            button.customers__status.customers__status--inactive Inactive

